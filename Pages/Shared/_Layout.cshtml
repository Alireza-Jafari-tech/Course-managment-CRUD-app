<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar">
    <div class="container topbar-inner">
      <a class="brand" href="/Index">CoursePlatform</a>
      <nav class="main-nav">
        <a asp-page="/Courses/Index">Courses</a>
        <a asp-page="/Instructors/Index">Instructors</a>
        <a asp-page="/Students/Index">Students</a>
      </nav>
    </div>
  </header>
    <main class="container">
      @RenderBody()
    </main>

    <footer class="footnote">
        <small>
            &copy; 2025 - project - <a style="color: #fff;" asp-page="/Privacy">Privacy</a>
        </small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>